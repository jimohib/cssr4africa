<launch>
  <!-- Arguments -->
  <arg name="verbose" default="false" />
  <arg name="config_file" default="$(find robot_localization)/config/landmarks.yaml" />
  <arg name="topics_file" default="$(find robot_localization)/config/topics.txt" />

  <!-- Launch the robot localization node -->
  <node pkg="robot_localization" type="robot_localization_node" name="robot_localization" output="screen">
    <param name="verbose" value="$(arg verbose)" />
    <param name="config_file" value="$(arg config_file)" />
    <param name="topics_file" value="$(arg topics_file)" />
  </node>
  
  <!-- Optional: Launch RViz for visualization -->
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find robot_localization)/config/localization.rviz" if="$(arg verbose)" />
</launch>